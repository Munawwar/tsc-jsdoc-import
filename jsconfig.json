{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",

    "checkJs": true,
    "skipLibCheck": true,
    
    "noEmit": false,
    "noEmitOnError": true,
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "exclude": [ "node_modules" ],
  "include": [ "*.js" ]
}